<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F8F8F8"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginBottom="@dimen/dp_05">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_margin="@dimen/dp_4"
            android:src="@drawable/b2"
            />

        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv1"
            android:text="热点"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_17"/>

        <ImageView
            android:id="@+id/iv2"
            style="@style/iv_base_function"
            android:layout_alignParentRight="true"
            android:src="@drawable/a8"/>

        <ImageView
            android:id="@+id/iv3"
            style="@style/iv_base_function"
            android:layout_toLeftOf="@+id/iv2"
            android:src="@drawable/a2"/>

        <ImageView
            android:id="@+id/iv4"
            style="@style/iv_base_function"
            android:layout_toLeftOf="@+id/iv3"
            android:src="@drawable/a5"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP126"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            android:layout_weight="1"
            android:src="@drawable/s7"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            android:layout_weight="1"
            android:src="@drawable/s1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            android:layout_weight="1"
            android:src="@drawable/s2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/s4"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gv_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_05"
        android:numColumns="3"
        >
    </GridView>
</LinearLayout>